<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="popup_theme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
    </style>


    <!--  To make the view lager when active  -->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <!--  To increase the size of the text  -->
    <style name="BottomNavigationViewActive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">13sp</item>
    </style>


    <style name="match_parent_match_parent" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_content_wrap_content" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>